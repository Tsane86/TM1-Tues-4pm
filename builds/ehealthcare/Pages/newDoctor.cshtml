    <div class="container-sm mt-5">

        <div class="registration-doctor my-5">
            <form method="post">
                <h2>Registration</h2>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.EmailAddress" class="for col-form-label text-md">Email Address</label>
                        <input asp-for="Doctor.EmailAddress" type="email" id="emailaddress" class="form-control" placeholder="Enter Email Address" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.Person.Password" class="for col-form-label text-md">Password</label>
                        <input asp-for="Doctor.Person.Password" type="password" id="userpassword" class="form-control" placeholder="Enter Password" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.Person.FirstName" class="for col-form-label text-md">First Name</label>
                        <input asp-for="Doctor.Person.FirstName" type="text" id="firstName" class="form-control" placeholder="Enter First Name" required>
                    </div>
                    <div class="col">
                        <label asp-for="Doctor.Person.LastName" class="for col-form-label text-md">Last Name</label>
                        <input asp-for="Doctor.Person.LastName" type="text" id="lastName" class="form-control" placeholder="Enter Last Name" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.Person.Dob" class="for col-form-label text-md">Date of Birth</label>
                        <input asp-for="Doctor.Person.Dob" type="date" id="firstName" class="form-control" placeholder="dd/mm/yyyy" min="1900-01-01" max="2020-05-11" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.Person.Address" class="for col-form-label text-md">Address</label>
                        <input asp-for="Doctor.Person.Address" type="text" id="address1" class="form-control" placeholder="Enter Address" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Doctor.Speciality" class="for col-form-label text-md">Speciality</label>
                        <input asp-for="Doctor.Speciality" type="text" id="address1" class="form-control" placeholder="Enter Speciality" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Doctor.Person.Suburb">Suburb</label>
                        <input asp-for="Doctor.Person.Suburb" type="text" class="form-control" id="inputCity" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Doctor.Person.State">State</label>
                        <select asp-for="Doctor.Person.State" id="inputState" class="form-control" required>
                            <option selected></option>
                            <option value="NSW">NSW</option>
                            <option value="ACT">ACT</option>
                            <option value="VIC">VIC</option>
                            <option value="QLD">QLD</option>
                            <option value="TAS">TAS</option>
                            <option value="NT">NT</option>
                            <option value="WA">WA</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Doctor.Person.Postcode">Post Code</label>
                        <input asp-for="Doctor.Person.Postcode" type="text" class="form-control" id="inputZip" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-danger" type="reset">Reset</button>
            </form>
        </div>
    </div>
