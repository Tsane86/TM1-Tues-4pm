                    <a class="nav-link" href="javascript:{}" onclick="document.getElementById('logout').submit(); return false;">Log out</a>
                </form>
            </li>


                <li class="nav-item">
                    <label class="nav-link">| Logged in as: @Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")</label>
                </li>

            </ul>
        </div>
    </nav>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
